{
  "name": "@citation-js/plugin-software-formats",
  "version": "0.3.1",
  "description": "Collection of software-related input and output formats for Citation.js",
  "author": "Lars Willighagen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsgw/citation.js-plugin-software-formats.git"
  },
  "main": "lib/index.js",
  "jsdelivr": "build/citation-software.min.js",
  "unpkg": "build/citation-software.min.js",
  "files": [
    "/lib",
    "/build/citation-software.js",
    "/build/citation-software.min.js"
  ],
  "scripts": {
    "-- 1 --": "testing",
    "lint": "npm run lint:src; npm run lint:test; npm run lint:tools",
    "lint:src": "standard src/**/*.js",
    "lint:test": "standard test/**/*.js",
    "lint:tools": "standard tools/**/*.js",
    "test": "mocha -r @babel/polyfill -r @babel/register test/*.spec.js",
    "-- 2 --": "building",
    "compile": "babel src -d lib --copyfiles",
    "dist": "node tools/build.js",
    "dist:minify": "uglifyjs --config-file .uglify.json build/citation-software.js -o build/citation-software.min.js",
    "-- 3 --": "hooks",
    "preversion": "npm run lint && npm run test",
    "prepublishOnly": "npm run compile && npm run dist && npm run dist:minify"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "@citation-js/date": "^0.4.2",
    "@citation-js/name": "^0.4.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@citation-js/core": "^0.4.0-rc.1",
    "babel-eslint": "^10.0.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "eslint-plugin-vuln-regex-detector": "^1.0.4",
    "mocha": "^5.2.0",
    "standard": "^12.0.1",
    "uglify-js": "^3.4.9"
  },
  "peerDependencies": {
    "@citation-js/core": "^0.4.0-rc.1"
  }
}
